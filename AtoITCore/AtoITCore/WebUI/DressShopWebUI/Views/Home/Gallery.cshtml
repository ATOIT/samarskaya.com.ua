@model IEnumerable<Domain.Entityes.Product>
@{
    ViewBag.Title = "Галерея";
}
<!------------------CONTENT---------------->
<div class="container">
    <div class="row">
        @foreach (var a in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 galerey">
                <figure>
                    <div class="galerey-cart">
                        <figcaption>
                            @foreach (var i in a.Photo)
                            {
                                if (i.Priority)
                                {
                                    <a href="" class="btn btn-info btn-lg" data-toggle="modal" data-target="#@("myModal"+ a.ProductId)">
                                        <img class="galerey-img" src="~/PhotoForDB/@i.PhotoUrl" alt="" title="@i.Product.Name">
                                    </a>
                                }
                            }
                            <div class="galerey-opis">
                                <strong class="galerey-name">@a.Name</strong>
                            </div>
                        </figcaption>
                    </div><!-- /. cart -->
                </figure>
            </div><!-- /.col -->
            <!------------------/CONTENT---------------->
            <!------------------MODAL--------------->
            <!-- Modal -->
            <div id="@("myModal"+ a.ProductId)" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Modal Header</h4>
                        </div>
                        <div class="modal-body">
                            <p>@a.Name</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            <!------------------/MODAL---------------->
        }
    </div> <!-- /.row -->
</div> <!-- /.container -->






